<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:paddingLeft="8dp"
                android:paddingRight="8dp" android:paddingBottom="8dp" android:paddingTop="8dp">
            <TextView
                    android:text="label:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/label" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:layout_weight="1"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="label"
                    android:ems="10"
                    android:id="@+id/labelEditText" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@+id/label" android:layout_marginStart="8dp"
                    android:layout_weight="5"/>
        </LinearLayout>
        <CheckBox
                android:text="short"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shortCheckBox"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/labelEditText" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>